<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>${timestamp}</id>

	<formats>
		<format>zip</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>src/release</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>bin</include>
				<include>bin/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>conf</outputDirectory>
			<includes>
				<include>*.*</include>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/descriptors</directory>
			<outputDirectory>logs</outputDirectory>
			<includes>
				<include>*.md</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<includes>
				<include>cc.admin:module-system</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<excludes>
				<exclude>cc.admin:module-system</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
